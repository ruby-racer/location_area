<% content_for :head do %>
  <%=
    javascript_include_tag(
      'https://maps.googleapis.com/maps/api/js?libraries=drawing&key=AIzaSyCQBZAsGTQHFPSAQ2dx2BmTO6KJe8UF4Sc'
    )
  %>
<% end %>

<header class="page-header">
  <h1>
    Map

    <div class="pull-right">
    <%= link_to('New Locations', new_location_path, class: 'btn btn-success') if action_name == 'index' %>
    <%= link_to('Show Location', location_path(@location), class: 'btn btn-success') if action_name == 'edit' %>
    <%= link_to('Edit Location', edit_location_path(@location), class: 'btn btn-success') if action_name == 'show' %>
    <%= link_to('Locations', locations_path, class: 'btn btn-primary') unless action_name == 'index' %>
    </div>
  </h1>
</header>

<div id="map" data-polygons="<%= data_for_google_map(@location) %>"></div>

<hr>
